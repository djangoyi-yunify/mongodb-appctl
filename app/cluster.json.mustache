{
    "name": {{cluster.name}},
    "description": {{cluster.description}},
    "vxnet": {{cluster.vxnet}},
    "advanced_actions": [
        "scale_horizontal",
        "change_vxnet"
    ],
    "nodes": [{
        "role": "repl_node",
        "container": {
            "type": "kvm",
            "zone": "pek3",
            "image": "img-zopsx8ms"
        },
        "instance_class": {{cluster.repl_node.instance_class}},
        "count": {{cluster.repl_node.count}},
        "cpu": {{cluster.repl_node.cpu}},
        "memory": {{cluster.repl_node.memory}},
        "volume": {
            "size": {{cluster.repl_node.volume_size}},
            "mount_point": "/data",
            "class": {{cluster.repl_node.volume_class}},
            "filesystem": "ext4"
        },
        "vertical_scaling_policy": "sequential",
        "services": {
            "init": {
                "cmd": "appctl init"
            },
            "start": {
                "cmd": "appctl start"
            },
            "stop": {
                "cmd": "appctl stop"
            },
            "get_nodes_order": {
                "event": ["upgrade", "rollback", "scale_vertical"],
                "cmd": "appctl getNodesOrder"
            }
        }
    },{
        "role": "ro_node",
        "container": {
            "type": "kvm",
            "zone": "pek3",
            "image": "img-zopsx8ms"
        },
        "instance_class": {{cluster.ro_node.instance_class}},
        "count": {{cluster.ro_node.count}},
        "cpu": {{cluster.ro_node.cpu}},
        "memory": {{cluster.ro_node.memory}},
        "volume": {
            "size": {{cluster.ro_node.volume_size}},
            "mount_point": "/data",
            "class": {{cluster.ro_node.volume_class}},
            "filesystem": "ext4"
        },
        "vertical_scaling_policy": "sequential",
        "services": {
            "init": {
                "cmd": "appctl init"
            },
            "start": {
                "cmd": "appctl start"
            },
            "stop": {
                "cmd": "appctl stop"
            },
            "get_nodes_order": {
                "event": ["upgrade", "rollback", "scale_vertical"],
                "cmd": "appctl getNodesOrder"
            }
        }
    }],
    "env": {
        "db.userpass": {{env.db.userpass}},
        "conf.net.port": {{env.conf.net.port}}
    }
}